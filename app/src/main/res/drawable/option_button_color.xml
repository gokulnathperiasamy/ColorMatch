<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorPrimary" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorOptionDark"
                android:endColor="@color/colorOptionMedium"
                android:startColor="@color/colorOptionLight" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorPrimary" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorOptionLight"
                android:endColor="@color/colorOptionMedium"
                android:startColor="@color/colorOptionDark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorPrimary" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorOptionLight"
                android:endColor="@color/colorOptionMedium"
                android:startColor="@color/colorOptionDark" />
        </shape>
    </item>
</selector>